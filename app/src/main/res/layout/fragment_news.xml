<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


     <androidx.cardview.widget.CardView
         xmlns:card_view="http://schemas.android.com/apk/res-auto"
         android:id="@+id/card_view"
         android:layout_width="match_parent"
         android:layout_height="280dp"
         android:layout_marginBottom="10dp"
         card_view:cardCornerRadius="4dp">

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent">

             <ImageView
                 android:id="@+id/news1_icon"
                 android:layout_width="match_parent"
                 android:layout_height="230dp"
                 android:adjustViewBounds="true"
                 android:contentDescription="ICON"
                 android:gravity="center"
                 android:scaleType="fitXY" />

             <TextView
                 android:id="@+id/news1_info"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_below="@+id/news1_icon"
                 android:layout_alignLeft="@+id/news1_icon"
                 />
         </RelativeLayout>

     </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_below="@+id/card_view"
        android:layout_height="280dp"
        android:layout_marginBottom="10dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/news2_icon"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:contentDescription="ICON"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:gravity="center" />

            <TextView
                android:id="@+id/news2_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/news2_icon"
                android:layout_alignLeft="@+id/news2_icon"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view3"
            android:layout_width="match_parent"
            android:layout_below="@+id/card_view2"
            android:layout_height="280dp"
            android:layout_marginBottom="10dp"
            card_view:cardCornerRadius="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/news3_icon"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:contentDescription="ICON"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/news3_info"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/news3_icon"
                    android:layout_alignLeft="@+id/news3_icon"
                    />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>