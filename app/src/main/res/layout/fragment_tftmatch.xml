<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/myTFTbutton"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VIEW LAST 20 TFT MATCH HISTORIES" />

        <RelativeLayout
            android:id="@+id/tft_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="16dp">

        <ImageView
            android:id="@+id/iv_mytftIcon"
            android:layout_width="200dp"
            android:layout_height="170dp"
            android:src="@drawable/teamfighttactics"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_mytftIcon"
            android:layout_toEndOf="@+id/iv_mytftIcon"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:id="@+id/tftlevel"
            android:text="TFT Status Coming Soon"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_mytftIcon"
            android:layout_toEndOf="@+id/iv_mytftIcon"
            android:layout_below="@+id/tftlevel"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/tftrevisiondate"
            android:text="Last Revision Date:"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_mytftIcon"
            android:layout_toEndOf="@+id/iv_mytftIcon"
            android:layout_below="@+id/tftrevisiondate"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/tftmydate"
            />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/iv_mytftIcon"
                android:src="@drawable/bcktft"

                />
    </RelativeLayout>
</LinearLayout>
</LinearLayout>